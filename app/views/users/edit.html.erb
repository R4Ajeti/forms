<h1>Edit User</h1>
<%= form_for(@user, method: :patch) do |f| %>
  <% if @user.errors.any? %>
        <% @user.errors.full_messages.each do |msg| %>
            <div class="alert alert-danger"><%= msg %></div>
        <% end %>
  <% end %>    
  <%= f.label :username %>
  <%= f.text_field :username, :class => 'border-color-red' %>
  <br>
  <%= f.label :email %>
  <%= f.email_field :email, :class => 'border-color-red' %>
  <br>
  <%= f.label :password %>
  <%= f.password_field :password, :class => 'border-color-red' %>
  <br>
  <%= f.submit "Update existing user" %>
<% end %>